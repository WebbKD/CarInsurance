
@{
    ViewBag.Title = "SelectionBasic";
}


<br /> <br />
<div class="container">
    <div class="row">
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image">
                    <img class="conPic" src="http://www.carinsuranceguidebook.com/wp-content/uploads/2011/05/CLUE-reports.jpg">
                </div>
                <div class="card-content">
                    <p>
                        View your claim history
                    </p>
                </div>
                <div class="card-action">
                    <a href="MyClaimHistory?id=@User.Identity.Name" class="btn">History</a>
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image">
                    <img class="conPic" src="https://www.compareinsurance.com.au/assets/upload/insurance-claim-form.jpg">
                    <span class="card-title black-text">Make a Claim</span>
                </div>
                <div class="card-content">
                    <p>
                        Make your claim.
                    </p>
                </div>
                <div class="card-action">
                    <a href="~/Home/AddAccidentForm" class="btn">Claim</a>
                </div>
            </div>
        </div>
    </div>
</div>